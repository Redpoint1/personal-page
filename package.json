{
  "name": "personal-page",
  "version": "0.4.0",
  "private": true,
  "author": "Richard Rožár",
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "commit": "git-cz",
    "publish": "git push --tag && conventional-github-releaser -p custom",
    "release": "standard-version",
    "sync": "rsync --chown www-data:www-data -av --progress ./dist/ root@remote.local:/var/www/html"
  },
  "dependencies": {
    "@mdi/font": "^5.3.45",
    "@mdi/svg": "^5.3.45",
    "core-js": "^3.4.4",
    "jquery": "^3.4.1",
    "popper.js": "^1.16.0",
    "typeface-roboto": "^0.0.75",
    "typescript": "^3.7.5",
    "vue": "^2.6.11",
    "vue-class-component": "^7.2.2",
    "vue-i18n": "^8.16.0",
    "vue-property-decorator": "^8.3.0",
    "vue-router": "^3.1.5",
    "vuetify": "^2.2.11"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-angular": "^8.3.4",
    "@types/jquery": "^3.3.31",
    "@typescript-eslint/eslint-plugin": "^3.1.0",
    "@typescript-eslint/parser": "^3.1.0",
    "@vue/cli-plugin-babel": "~4.4.1",
    "@vue/cli-plugin-eslint": "~4.4.1",
    "@vue/cli-plugin-router": "~4.4.1",
    "@vue/cli-plugin-typescript": "~4.4.1",
    "@vue/cli-service": "~4.4.1",
    "@vue/eslint-config-prettier": "^6.0.0",
    "@vue/eslint-config-typescript": "^5.0.1",
    "babel-eslint": "^10.0.3",
    "commitizen": "^4.0.3",
    "conventional-changelog-custom": "github:Redpoint1/conventional-changelog-custom#semver:^1.0.0",
    "conventional-github-releaser": "^3.1.3",
    "cz-customizable": "^6.2.0",
    "eslint": "^7.2.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-vue": "^6.1.2",
    "husky": "^4.0.10",
    "node-sass": "^4.13.1",
    "sass": "^1.19.0",
    "sass-loader": "^8.0.2",
    "standard-version": "^8.0.0",
    "typescript": "~3.9.3",
    "vue-cli-plugin-vuetify": "~2.0.5",
    "vue-svg-inline-loader": "^1.4.4",
    "vue-template-compiler": "^2.6.11",
    "vuetify-loader": "^1.3.0"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "@vue/prettier",
      "@vue/typescript"
    ],
    "rules": {},
    "parserOptions": {
      "parser": "@typescript-eslint/parser"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "bugs": {
    "url": "https://github.com/Redpoint1/personal-page/issues"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-angular"
    ],
    "rules": {
      "type-enum": [
        2,
        "always",
        [
          "build",
          "breaking",
          "change",
          "ci",
          "docs",
          "feat",
          "fix",
          "perf",
          "refactor",
          "release",
          "revert",
          "style",
          "test"
        ]
      ]
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Redpoint1/personal-page.git"
  },
  "standard-version": {
    "message": "release: %s",
    "preset": "custom"
  }
}
